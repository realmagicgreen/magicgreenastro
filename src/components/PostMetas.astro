---
import FormattedDate from "@components/FormattedDate.astro";

const { category } = Astro.props.frontmatter || Astro.props;

const photography = "UNKNOWN";
---

<div class="h5 post_metas">
  <div class="post_meta_block">
    <div class="post_meta_icon">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="40"
        height="40"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon_photographer"
        ><path
          d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"
        ></path><circle cx="12" cy="13" r="4"></circle></svg
      >
      <span
        class="post_meta_text nowrap"
        title="'photography by' + '{photography}'"
      >
        {photography}
      </span>
    </div>
  </div>

  <div class="post_meta_icon">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="48"
      height="48"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon_clock"
      ><circle cx="12" cy="12" r="10"></circle><polyline
        points="12 6 12 12 16 14"></polyline></svg
    >
    <FormattedDate />
  </div>

  <div class="uppercase">
    SECTION: {category}
  </div>
</div>

<style>
  .post_metas {
    padding-top: var(--space);
  }
</style>
