<style lang="scss" is:global>
  article {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 !important;
    padding: 0 !important;
  }

  .post_header {
    padding-top: var(--space);
  }

  .nav {
    padding: 5rem 1rem 1rem 1rem !important;
    padding-top: 5rem;
  }
  .nav_items a {
    height: 48px;
    display: block;
  }
  .nav_title {
    padding-bottom: 0.5rem;
  }

  .tags {
    max-width: none;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    padding-left: 0;
    li {
      display: inline-block;
      margin: 0;
      padding: 0;
      text-transform: uppercase;
    }
    a {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.5rem;
      margin: 1px;
      font-size: 85%;
      min-height: 42px;
      line-height: 1;
    }
  }

  .post_content {
    h2 {
      transform: rotateZ(4deg) !important;
      padding-left: 5dvw;
      width: 100dvw;
    }
    h3 {
      transform: rotateZ(-2deg) !important;
      padding-left: 5dvw;
      width: 100dvw;
    }
    h4 {
      transform: rotateZ(2deg) !important;
      padding-left: 5dvw;
      width: 100dvw;
    }
    h5 {
      transform: rotateZ(-3deg) !important;
      padding-left: 5dvw;
      width: 100dvw;
    }
    h6 {
      transform: rotateZ(3deg) !important;
      padding-left: 5dvw;
      width: 100dvw;
    }
    p,
    ul:not(.tags),
    ol {
      width: 82dvw;
      max-width: 650px;
      margin: 0 auto;
      padding-bottom: var(--space_small);
      font-weight: 300;
    }
    p:has(img) {
      width: 100dvw;
      max-width: none !important;
      margin: 0 !important;
    }
    ul:not(.tags) {
      padding-left: calc(var(--spacing) / 2);
    }

    li {
      list-style-type: initial;
    }
  }
  .toc {
    color: var(--primary);
    position: relative;
    width: fit-content;
    padding: 0 calc(var(--space) / 4);
    max-width: 75vw;
    margin: 3vw auto;
    border-left: 0.25rem solid var(--primary-focus);
    ul {
      margin: 0 auto;
      padding: 0 !important;
    }
    li {
      list-style: none !important;
      text-transform: uppercase;
      text-decoration: none !important;
    }
    li::marker {
      display: none !important;
    }
  }



  .cat_name {
    display: block;
    opacity: 0.25;
    font-weight: 100;
    user-select: none;
    padding-top: var(--space_small);
  }

  hr {
    width: 55%;
    color: var(--primary) !important;
    border: 1px solid var(--primary) !important;
  }
  .post_metas {
    color: var(--contrast);
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: flex-start;
    padding-top: var(--space);

    @media screen and (min-width: 840px) {
      flex-direction: row;
    }
  }
  .post_meta_block {
    padding-left: var(--space_small);
    padding-right: var(--space_small);
  }
  .post_meta_icon {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    svg {
      width: 55px;
    }
  }
</style>
