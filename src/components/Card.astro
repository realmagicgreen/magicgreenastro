---
import { Image } from "astro:assets";

export interface Props {
  description: string;
  title: string;
  subtitle: string;
  photography?: string;
  category?: string | undefined;
  coverImage: any;
  pubDate: any;
  cssClass: string;
}

const {
  title,
  subtitle,
  description,
  coverImage,
  photography,
  category,
  pubDate,
  cssClass,
} = Astro.props;
---

<div class="card_astro">
  <div class={cssClass}>
    <Image
      height={550}
      src={coverImage}
      alt={title}
      format="avif"
      quality="low"
    />

    <div class="text">
      <h2 class="title">{title.toLocaleUpperCase()}</h2>
      <div class="metas">
        <span class="time">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon_clock"
            ><circle cx="12" cy="12" r="10"></circle><polyline
              points="12 6 12 12 16 14"></polyline></svg
          >
          <time datetime={pubDate.toISOString()}>
            {pubDate.toDateString()}
          </time></span
        >

        <span class="photog">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon_photographer"
          >
            <path
              d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"
            ></path><circle cx="12" cy="13" r="4"></circle>
          </svg>
          {photography}
        </span>

        <span class="category">
                    <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon_tag"
            >
            <circle cx="12" cy="12" r="10"></circle><circle
              cx="12"
              cy="12"
              r="6"></circle><circle cx="12" cy="12" r="2"></circle></svg
          >
          {category?.toUpperCase()}
        </span>
      </div>

      <div class="subtitle">{subtitle.toUpperCase()}</div>

      <div class="desc">{description}</div>
    </div>
  </div>
</div>

<style lang="scss">
  .desc {
    // display: none;
    padding-top: 0.5rem;
  }
  .subtitle {
    padding-top: 0.5rem;
    color: var(--contrast);
  }

  .title {
    font-size: calc(3vw + 3vh) !important;
    padding-top: 1rem;
    padding-bottom: 1rem;
    margin-bottom: 0;
  }
  span {
    display: block;
  }
</style>
