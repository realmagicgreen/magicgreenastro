---
export interface Props {
  title: string;
  subtitle: string;
  content: string;
  href: string;
}

const { href, title, subtitle, content } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
    </h2>
    <h3>
      {subtitle}
    </h3>
    <p>
      {content}
    </p>
  </a>
</li>
<style></style>
