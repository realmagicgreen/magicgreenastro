---
import { Picture } from "@astrojs/image/components";

import Layout from "@layouts/Body.astro";
import PostMetas from "@components/PostMetas.astro";

//import type { CollectionEntry } from "astro:content";
// type Props = CollectionEntry<"health">["data"];

const {
  title,
  subtitle,
  description,
  category,
  photography,
  coverImage,
  pubDate,
  updatedDate,
} = Astro.props;
---

<Layout bodyClass="article" title={title} description={description}>
  <article>
    <div class="post_header container">
      <h1 class="compacted centered">{title}</h1>
      <h2 class="centered border_top border_bottom">{subtitle}</h2>
    </div>

    <div class="hero">
      <Picture
        class="hero_picture"
        src={coverImage}
        widths={[640, 880, 1024, 1920]}
        aspectRatio="1:1"
        sizes="(max-width: 1920px) 100vw, 1024px, 880px, 640px"
        alt={coverImage}
      />
    </div>

    <PostMetas />

    <div class="post_content container padding_top">
      <slot />
    </div>
  </article>
</Layout>
<style lang="scss">
  article {
    width: 100vw !important;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-right: var(--space_horizontal);
    padding-left: var(--space_horizontal);
  }

  .post_content {
    padding-right: 10vw;
    padding-left: 10vw;
  }

  picture {
    object-fit: none;
    // &::after {
    //   content: url({coverImage});
    // }
    img.hero {
      display: block !important;
      position: relative !important;
      // top: 20%;
      // left: 0;
      // transform: scale(150%) !important;
      // transform-origin: top center;
      height: 700px !important;
    }
  }
</style>
