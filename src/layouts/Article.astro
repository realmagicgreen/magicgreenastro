---
import Layout from "@layouts/Layout.astro";
import Nav from "@components/Nav.astro";
import { Image } from "astro:assets";

interface coverImage {
  src: string;
  width: number;
  height: number;
  format: string;
}

export interface Props {
  description: string;
  cssBodyClass: string;
  title: string;
  subtitle: string;
  category: string;
  photography: string;
  coverImage: {};
  pubDate: any;
}

const {
  cssBodyClass,
  title,
  subtitle,
  description,
  category,
  coverImage,
  photography,
  pubDate,
} = Astro.props.frontmatter || Astro.props;
---

<Layout
  title={title}
  description={description}
  cssBodyClass={cssBodyClass}
  category={category}
>
  <Nav cssClass="article" />
  <main>
    <article>
      <div class="post_header container">
        <h1 class="compacted centered">{title.toUpperCase()}</h1>
        <h2 class="centered border_top border_bottom">
          {subtitle}
          <br /><span class="cat_name">{category.toUpperCase()}</span>
        </h2>
      </div>

      <div class="hero vegas_container">
        <div class="vegas_overlay"></div>
        <div class="vegas_slide">
          <Image
            src={coverImage}
            width={1920}
            height={1080}
            alt={title}
            quality="high"
            format="avif"
          />
        </div>
      </div>

      <div class="h5 post_metas">
        <div class="post_meta_block post_meta_icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon_photographer"
            ><path
              d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"
            ></path><circle cx="12" cy="13" r="4"></circle></svg
          >
          <span class="post_meta_text nowrap">
            {photography}
          </span>
        </div>

        <div class="post_meta_block post_meta_icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon_clock"
            ><circle cx="12" cy="12" r="10"></circle><polyline
              points="12 6 12 12 16 14"></polyline></svg
          >
          <time datetime={pubDate.toISOString()}>
            {pubDate.toDateString()}
          </time>
        </div>

        <div class="post_meta_block post_meta_icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon_clock"
          >
            <path
              d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"
            ></path>
            <line x1="7" y1="7" x2="7.01" y2="7"></line>
          </svg>

          {category.toUpperCase() || "UNKNOWN"}
        </div>
      </div>
    </article>

    <div class="post_content container padding_top">
      <slot />
    </div>
  </main>
</Layout>

<style lang="scss">
  article {
    margin-top: 0;
    padding-top: 0;
    width: 100vw !important;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-right: var(--space_horizontal);
    padding-left: var(--space_horizontal);
    box-shadow: none;
    .know-more-links {
      border-bottom: 4px solid var(--primary) !important;
      border-radius: 5px;
      color: red !important;
    }
  }

  .post_content {
    padding-right: 10vw;
    padding-left: 10vw;
  }

  picture {
    object-fit: none;

    img.hero {
      display: block !important;
      position: relative !important;

      height: 700px !important;
    }
  }

  //rok recent

  .post_header {
    padding-top: var(--space);
  }
  .hero {
    position: relative;
  }
  .vegas_overlay {
    opacity: 0.5;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    overflow: hidden;
    border: none;
    padding: 0;
    margin: 0;
    background: transparent url("../assets/overlays/07.png") center center
      repeat;
  }

  body .vegas_container {
    overflow: hidden !important;
    position: relative;
  }

  .cat_name {
    display: block;
    opacity: 0.25;
    font-weight: 100;
    user-select: none;
    padding-top: var(--space_small);
  }

  hr {
    width: 55%;
    color: var(--primary) !important;
    border: 1px solid var(--primary) !important;
  }
  .post_metas {
    padding-top: var(--space_small);
    padding-bottom: var(--space_small);
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: flex-start;
    padding-left: var(--space);
    padding-right: var(--space);
    @media screen and (min-width: 720px) {
      flex-direction: row;
    }
  }
  .post_meta_block {
    padding-left: var(--space);
    padding-right: var(--space);
  }
  .post_meta_icon {
    color: var(--primary) !important;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    svg {
      stroke: var(--primary) !important;
    }
  }
</style>
