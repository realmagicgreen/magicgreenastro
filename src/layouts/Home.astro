---
import Layout from "@layouts/Layout.astro";
export interface Props {
  description: string;
  title: string;
  cssBodyClass: string;
}

const { description, title } = Astro.props;

const cssBodyClass = "home";
---

<Layout
  title={title}
  description={description}
  category=""
  cssBodyClass={cssBodyClass}
>
  <main>
    <div class="container index">
      <slot />

      <div class="slogan r5deg">
        <h1 class="centered compacted minimal_padding speech_bubble">
          Sustainable, environment friendly examples present future.
        </h1>
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  .slogan {
    padding-top: var(--space);
    .compacted {
      user-select: none;
    }
  }
  h1 {
    font-size: calc(6vw + 6vh) !important;
  }

  .container.index {
    padding-top: var(--space);
  }
</style>
