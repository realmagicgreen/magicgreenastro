---
import Layout from "@layouts/Layout.astro";

import { Image } from "astro:assets";

import coverImage from "../assets/about-us.jpg";

export interface Props {
  description: string;
  title: string;
  cssBodyClass: string;
}

const { description, title } = Astro.props;

const cssBodyClass = "home";
---

<Layout title={title} description={description} cssBodyClass={cssBodyClass}>
  <main>
    <div class="hero r-5deg">
      <div class="vegas_overlay"></div>
      <div class="vegas_overlay2"></div>
      <Image
        class="coverimage"
        src={coverImage}
        width={1920}
        height={1080}
        alt={title}
        quality="mid"
        format="avif"
        loading="eager"
      />
    </div>
    <div class="container index">
      <slot />

      <div class="slogan r5deg">
        <h1 class="centered compacted minimal_padding speech_bubble">
          Sustainable, environment friendly examples present future.
        </h1>
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  .slogan {
    padding-top: var(--space);
    .compacted {
      user-select: none;
    }
  }
  h1 {
    font-size: calc(6vw + 6vh) !important;
  }

  .container.index {
    padding-top: var(--space);
  }
  .coverimage {
    width: 105vw;
    max-width: initial;
    margin-left: -20px
  }
</style>
