---
import Layout from "@layouts/Home.astro";
import { getCollection } from "astro:content";
import Card from "@components/Card.astro";

const featuredPosts = await getCollection("posts", ({ data }) => {
  return data.publish && data.featured && data.pubDate < new Date();
});

const posts = await getCollection("posts", ({ data }) => {
  return data.publish && data.pubDate < new Date();
});

export interface Props {
  title: string;
  cssBodyClass: string;
  pubDate: any;
  category: string;
}

import siteData from "@data/site.json";
const title = "Curated Info Platform";
const cssBodyClass = "index";
---

<Layout
  title={title}
  description={siteData.description}
  cssBodyClass={cssBodyClass}
>
  <h2 class="h5 uppercased centered">Featured Articles</h2>
  <div class="grida">
    {
      featuredPosts.map((post) => (
        <a class="card_link" href={`/${post.data.category}/${post.slug}`}>
          <Card
            cssClass="card"
            pubDate={post.data.pubDate}
            subtitle={post.data.subtitle}
            description={post.data.description}
            photography={post.data.photography}
            category={post.data.category}
            title={post.data.title}
            coverImage={post.data.coverImage}
            ad={post.data.ad}
          />
        </a>
      ))
    }
  </div>

  <br />
  <hr />
  <br />

  <h2 class="h5 uppercased centered">All Articles</h2>
  <div class="grida">
    {
      posts.map((post) => (
        <a class="card_link" href={`/${post.data.category}/${post.slug}`}>
          {post.data.title}
        </a>
      ))
    }
  </div>
</Layout>
<style lang="scss">
  .grida {
    display: grid;
    grid-gap: 0.5rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  .card_link {
    text-decoration: none;
  }
</style>
