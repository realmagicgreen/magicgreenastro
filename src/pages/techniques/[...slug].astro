---
import { CollectionEntry, getCollection } from "astro:content";
import Article from "@layouts/Article.astro";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const techniquesArticles = await getCollection("techniques", ({ data }) => {
    return !data.draft && data.pubDate < new Date();
  });
  return techniquesArticles.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}
interface Props {
  post: CollectionEntry<"techniques">;
}

// 2. When it's time to render, you can get the entry directly from the prop
const { post } = Astro.props;
const { Content } = await post.render();

//add bottom listing of THIS category

const articles = await getCollection("techniques", ({ data }) => {
  return !data.draft && data.pubDate < new Date();
});
---

<Article
  {...post.data}
  cssBodyClass="techniques"
  description={post.data.description}
  title={post.data.title}
  subtitle={post.data.subtitle}
  category="techniques"
  photography={post.data.photography}
  coverImage={post.data.coverImage}
>
  <Content />
  <details class="techniques" open>
    <summary class="h3">HEALTH POSTS</summary>
    <div class="">
      {
        articles.map((post) => (
          <div class="uppercase">
            <a href={`/techniques/${post.slug}`}>{post.data.title}</a>
          </div>
        ))
      }
    </div>
  </details>
</Article>

<style lang="scss">
  details {
    margin: 3rem;
    padding: 3rem;
    border-radius: 3vw;
    border: 10px solid hsla(0, 0%, 100%, 0.033);
    border-top: 0 none;
    border-bottom: 0 none;
    //background-color: hsla(0, 0%, 100%, 0.025);
  }
</style>
