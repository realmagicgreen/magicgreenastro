---
import Layout from "@layouts/Home.astro";
import { getCollection } from "astro:content";
import Card from "@components/Card.astro";

const currentCategory = 'health';

const posts = await getCollection("articles", ({ data }) => {
  return data.category == currentCategory ;
});

export interface Props {
  title: string;
  cssBodyClass: string;
  pubDate: any;
  category: string;
}

import siteData from "@data/site.json";
const title = "Curated Info Platform";
const cssBodyClass = "index";
const category = "articles";
---

<Layout
  title={title}
  description={siteData.description}
  cssBodyClass={cssBodyClass}
>
  <h2 class="uppercased">{currentCategory}</h2>
  <div class="grida">
    {
      posts.map((post) => (
        <a class="card_link" href={`/${category}/${post.slug}`}>
          <Card
            cssClass="card"
            pubDate={post.data.pubDate}
            subtitle={post.data.subtitle}
            description={post.data.description}
            photography={post.data.photography}
            title={post.data.title}
            coverImage={post.data.coverImage}
          />
        </a>
      ))
    }
  </div>
</Layout>
<style lang="scss">
  .grida {
    display: grid;
    grid-gap: 0.5rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  .card_link {
    text-decoration: none;
  }
</style>
