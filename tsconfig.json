{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Replace `astro/client` with `@astrojs/image/client`
    "types": ["@astrojs/image/client"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@data/*": ["src/data/*"],
      "@js/*": ["src/js/*"],
      "@svgs/*": ["public/assets/svgs/*"],
      "@styles/*": ["src/scss/*"],
      "@p/*": ["public/assets/p/*"]
    }
  }
}
