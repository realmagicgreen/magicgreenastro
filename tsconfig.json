{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Replace `astro/client` with `@astrojs/image/client`
    // "types": ["@astrojs/image/client"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@data/*": ["src/data/*"],
      "@js/*": ["src/js/*"],
      "@svgs/*": ["src/assets/svgs/*"],
      "@styles/*": ["src/scss/*"],
      "@p/*": ["src/assets/p/*"],
      "@overlays/*": ["src/assets/overlays/*"]
    },
    "strictNullChecks": true,
    "allowJs": true
  }
}
